<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F1F1"
    android:orientation="vertical"
    tools:context=".Settings.SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/btn1"
            android:orientation="horizontal">


                <androidx.cardview.widget.CardView
                    android:id="@+id/imgBack"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_margin="14dp"
                    android:layout_gravity="center"
                    android:backgroundTint="#BAB8B8"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/left_arrow" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="50dp"
                    android:text="Advance Search"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="normal" />

                <androidx.cardview.widget.CardView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="40dp"
                    android:backgroundTint="#BAB8B8"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/imgEdit"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center"
                        android:src="@drawable/edit"
                        app:tint="#602CBC" />

                </androidx.cardview.widget.CardView>
            </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="16dp"
                android:text="What Year"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="100dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/radiobutton"
                    android:paddingStart="5dp"
                    android:text="Froshman"
                    android:textColor="#686666"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <RadioButton
                    android:layout_width="100dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/radiobutton"
                    android:paddingStart="5dp"
                    android:text="Professor"
                    android:textColor="#686666"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <RadioButton
                    android:layout_width="100dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/radiobutton"
                    android:paddingStart="5dp"
                    android:text="Junior"
                    android:textColor="#686666"
                    android:textSize="12sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="100dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/radiobutton"
                    android:paddingStart="5dp"
                    android:text="Senior"
                    android:textColor="#686666"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <RadioButton
                    android:layout_width="100dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/radiobutton"
                    android:paddingStart="5dp"
                    android:text="Graduate"
                    android:textColor="#686666"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <RadioButton
                    android:layout_width="100dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/radiobutton"
                    android:paddingStart="5dp"
                    android:text="Alumni"
                    android:textColor="#686666"
                    android:textSize="12sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="22dp"
                android:text="Arena Of Interests"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:padding="16dp"
                    android:paddingStart="8dp"
                    android:text="Art"
                    android:textColor="#686666"
                    android:textSize="13sp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:padding="16dp"
                    android:paddingStart="8dp"
                    android:text="Business"
                    android:textColor="#686666"
                    android:textSize="13sp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:paddingStart="8dp"
                    android:text="Medicine"
                    android:textColor="#686666"
                    android:textSize="13sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-6dp"
                android:orientation="horizontal">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:padding="16dp"
                    android:paddingStart="8dp"
                    android:text="Software"
                    android:textColor="#686666"
                    android:textSize="14sp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="-6dp"
                    android:padding="16dp"
                    android:paddingStart="8dp"
                    android:text="Hardware"
                    android:textColor="#686666"
                    android:textSize="13sp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:paddingStart="8dp"
                    android:text="Business"
                    android:textColor="#686666"
                    android:textSize="13sp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:text="Age"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="normal" />

            <com.google.android.material.slider.RangeSlider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:valueFrom="0"
                android:valueTo="100"
                app:values="@array/rangeSlider" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:text="Soloct Gondor"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="#F6F3F3"
                app:cardCornerRadius="6dp"
                app:cardElevation="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="80dp"
                    android:text="Male"
                    android:textColor="#686666"
                    android:textSize="14sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="35dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="4dp"
                    app:cardCornerRadius="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Fermale"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:textStyle="normal" />


                </androidx.cardview.widget.CardView>


            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="22dp"
                android:text="Any Specific Keywords?"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:layout_width="330dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/edittext_shape"
                android:hint="ie.Amazon,Soccer"
                android:paddingStart="12dp"
                android:textColor="#686666" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="14dp"
                android:backgroundTint="#602CBC"
                android:text="Search For Match"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="normal"
                app:cornerRadius="12dp" />
        </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>